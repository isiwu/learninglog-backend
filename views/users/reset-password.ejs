
<%- include('../partials/_notification') %>
<div class="container mt-5">
  <div class="row">
    <div class="col-9 col-sm-6 offset-1 offset-sm-3">
      <form action="/users/reset-password" method="post" class="jumbotron bg-white py-2">
        <h3 class="text-center mb-5">Reset Password</h3>

        <div class="form-group">
          <label for="newPass" class="font-weight-bold">New Password</label>
          <input type="password" class="form-control" id="newPass" name="newPassword" placeholder="new password">
        </div>
        <div class="form-group mb-0">
          <label for="confirmPass" class="font-weight-bold">Confirm Password</label>
          <input type="password" class="form-control" id="confrimPass" name="confirmPassword" placeholder="confirm password">
        </div>
        <p class="text-danger mb-2"><%= confirmMessage %></p>

        <input type="hidden" name="email" value="<%= currUser.email %>">
        <button class="btn btn-info mt-3">Submit</button>
      </form>
    </div>
  </div>
</div>
<%- contentFor('title') %>
Reset Password

<style>
  .col-sm-6 {
    margin-top: 90px;
    margin-bottom: 120px;
  }
</style>