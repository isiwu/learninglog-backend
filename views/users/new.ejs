
<%- include('../partials/_notification'); %>
<div class="container mt-5">
<div class="row">
  <div class="col-sm-8 col-md-6 offset-sm-2 offset-md-3">
    <form action="/users/create" method="post" class="jumbotron bg-white py-2">
      <h2 class="text-center">Register</h2>

      <label for="email" class="form-control-label font-weight-bold">Email</label>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <div class="input-group-text">
            <i class="fas fa-envelope"></i>
          </div>
        </div>
        <input type="text" class="form-control" id="email" name="email" value="<%= userInput.email %>" placeholder="Email Address">
      </div>

      <label for="uname" class="form-control-label font-weight-bold">Username</label>
      <div class="input-group mb-0">
        <div class="input-group-prepend">
          <div class="input-group-text">
            <i class="fas fa-user"></i>
          </div>
        </div>
        <input type="text" class="form-control" id="uname" name="username" value="<%= userInput.username %>" placeholder="User name">
      </div>
      <p class="text-danger mb-3 mt-0"><%= usernameMessage %></p>

      <label for="pswd" class="form-control-label font-weight-bold">Password</label>
      <div class="input-group mb-3">
        <div class="input-group-prepend">
          <div class="input-group-text">
            <i class="fas fa-lock"></i>
          </div>
        </div>
        <input type="password" class="form-control" id="pswd" name="password" placeholder="Your password">
      </div>
      <div class="clearfix">
        <button class="btn btn-success">Register</button>
        <a href="/" class="btn btn-danger float-right">Cancel</a>
      </div>
      <p class="mt-4">Already have account? <a href="/users/login" class="text-success font-weight-bold">login</a></p>
    </form>
  </div>
</div>
</div>
<%- contentFor('title') %>
register
<style>
  .col-sm-8 {
    margin-top: 0px;
    margin-bottom: 20px;
  }
</style>