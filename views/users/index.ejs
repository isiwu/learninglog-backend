
<%- include('../partials/_notification') %>
<div class="container-fluid">
  <div class="row">
    <div class="col-7 offset-3 mt-5">
    <%_ if (users.length) { -%>
      <table class="table">
        <tr>
          <th>S/N</th>
          <th>Email</th>
          <th>Username</th>
          <th>Topics</th>
          <th></th>
        </tr>
        <%_ users.forEach((user, index) => { -%>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= user.email %></td>
            <td><%= user.username %></td>
            <td><%= user.topics.length %></td>
            <td><a href="/users/<%= user._id%>/delete?_method=DELETE" class="text-decoration-none text-dark"><i class="fas fa-trash"></i></a></td>
          </tr>
        <%_ }) -%>
      </table>
      <%_ } else { -%>
      <p class="text-center font-weight-bold">No user yet!</p>
      <%_ } -%>
    </div>
  </div>
</div>
<%- contentFor('title') %>
Users