
<%- include('../partials/_notification') %>
<div class="container-fluid">
  <div class="row">
    <div class="col-sm-2">
      <%- include('../partials/_side-bar') %>
    </div>
    <div class="col-sm-7 my-5 offset-sm-1">
      <h3 class="text-center dislpay-3 text-white">Add Entry for <%= topic.title%></h3>
      <form action="/topics/<%= topic._id %>/entries/new" method="post">
        <label for="entry" class="font-weight-bold text-white">Entry:</label>
        <textarea name="body" id="entry" cols="30" rows="10" class="form-control"><%= entry.body%></textarea>
        <button class="btn btn-success text-right mt-2 mb-4">Submit</button>
      </form>
    </div>
  </div>
</div>
<%- contentFor('title') %>
